startshape field

rule field {
	balls {}
	balls { f 90 }
	balls { r 90 }
	balls { f 90 r 90 }
	field { y 1.15 x 1 s .4 }
	field { y -1.15 x -1 s .4 }
	field { y -1.15 x 1 s .4 }
	field { y 1.15 x -1 s .4 }
}

rule balls {
	circles { }
	balls { x .75 s .5 }
	balls { flip 90 x .75 s .5 }
}

rule circles {
	CIRCLE { }
	CIRCLE { s .95 b 1 }
	circles { s .25 }
}