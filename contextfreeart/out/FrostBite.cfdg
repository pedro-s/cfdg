startshape Frost
size{ s 1.2 }

rule Frost
{
    gradient{h 200  sat .5 b .1 z -999 }
	point{s .09 r 180 h 225.00 sat 0.0157 b 1.0000}
	point{s .09}
}
 
rule gradient
{
    240*{ y .005 b .01 sat -.01}
        CIRCLE{s 1.25  y -.5}
}

rule point
{
	TRIANGLE{s 1 2}
	
	point{y -2.0 x 2.5 rotate 10 size 0.5}
	point{y 2.0 x -2.5 rotate 246 size 0.91}
}